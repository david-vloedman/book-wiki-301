<html lang="en">

  
  
 <%- include ../../layout/head.ejs %>
<body>

  <%- include ../../layout/header.ejs %>
  <main>
    <ul class="search-results">
      <li>
        <h4><%= book.title %></h4>
        <%- include detail.ejs %>
        <button class="select-button">Edit Details</button>
        <form action="/books" class="hide-me" method="POST">
          <input type="hidden" name="_method" value="put">
          <input type="text" name="title" id="title" value="<%= book.title %>">
          <input type="text" name="author" id="author" value="<%= book.author %>">
          <input type="hidden" name="image_url" id="image_url" value="<%= book.image_url %>">
          <textarea name="description" id="" cols="30" rows="10"><%= book.description %></textarea>
          <select name="bookshelf" id="bookshelf" required>
            <% shelves.forEach(shelf => { %>
            <p><%= shelf %></p>
            <option value="<%= shelf.book_shelf %>"><%= shelf.book_shelf %></option>
            <%}) %>
          </select>
          <button type="submit">Save to Database</button>
        </form>
      </li>
    </ul>


  </main>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="/js/app.js"></script>

  <%- include ../../layout/footer.ejs %>
</body>
</html>