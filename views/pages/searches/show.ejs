<!DOCTYPE html>
<html lang="en">

  <%- include ../../layout/head.ejs %>
  <body>

    <%- include ../../layout/header.ejs %>

    <main>
      <h4>Search Results</h4>
      
      <ul class="search-results">
        <% searchResults.forEach(book => { %>
          <li data-book-id="<%= book.isbn %>">
            <%- include ../books/detail.ejs %>
            <button class="select-button">Select this Book</button>
            <form action="/books" class="hide-me" method="POST">
              <input type="text" name="title" id="title" value="<%= book.title %>">
              <input type="text" name="author" id="author" value="<%= book.author %>">
              <input type="hidden" name="image_url" id="image_url" value="<%= book.image_url %>">
              <textarea name="description" id="" cols="30" rows="10"><%= book.description %></textarea>
              <input type="text" name="bookshelf" id="bookshelf" required>
              <button type="submit">Save this Book</button>
            </form>
          </li>
        <% }) %>
      </ul>     

    </main>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="/js/app.js"></script>
    <%- include ../../layout/footer.ejs %>
    
  </body>

</html>
